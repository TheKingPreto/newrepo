<div>

<%- messages() %>

<% if (locals.loggedin && locals.accountData) { %>
    <% const account = locals.accountData; %>
    
    <h1>Account Management</h1>
    <h2>Welcome <%= account.account_firstname %></h2>

    <div>
        <h3>Account Information</h3>
        <p>
            <a href="/account/update" 
               title="Update your account information">
                Update Account Information
            </a>
        </p>
    </div>
    
    <% if (account.account_type === "Employee" || account.account_type === "Admin") { %>
        <div>
            <h3>Inventory Management</h3>
            <p>
                <a href="/inv" 
                   title="Manage vehicle inventory">
                    Access Inventory Management View
                </a>
            </p>
        </div>
    <% } %>

<% } else { %>
    <h1>Not Logged In</h1>
    <p>Please <a href="/account/login">log in</a> to manage your account.</p>
<% } %>

</div>